@model GymManagement.Models.ViewModel.GalleryViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="module">
    <div class="module-head">
        <h3>Edit Gallery</h3>
    </div>
    <div class="module-body">

        @using (Html.BeginForm("Edit", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.GalleryId)
            <div class="modal-body">


                <div class="editor-label">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Photo)
                </div>
                <div class="editor-label">
                    <img src="~/Gallery/@Model.Photo" height="100" width="100" />
                </div>
                <div class="editor-field">

                    @Html.HiddenFor(model => model.Photo)
                    @Html.TextBoxFor(model => model.Photo, new { Type = "file" })

                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                  <div class="editor-field">
              <h2>@ViewBag.Message</h2>
              </div>


            </div>
            <div class="modal-footer">
               
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary" name="cmd"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
            </div>
        }

    </div>
</div>
