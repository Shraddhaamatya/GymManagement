@model GymManagement.Models.ViewModel.WorkoutViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="module">
    <div class="module-head">
        <h3>Add Workout</h3>
    </div>
    <div class="module-body">

        <div class="col-md-9">
            <div class="module-body table">

                @using (Html.BeginForm())
                {
                   

                    <span class="alert-danger"></span>
                    <div class="modal-body">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.MemberId)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(model => model.MemberId, new SelectList(ViewBag.Fullname, "MemberId", "Fullname"), "Select Member")
                            @Html.ValidationMessageFor(model => model.MemberId)
                        </div>

                        <table id="myTable" cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                            <tr>
                                <th>Workout Day</th>
                                <th>Description</th>
                            </tr>
                           
                                
                            
                                <tr>

                                    <td>Sunday</td>
                                    <td>@Html.TextBox("SunDesc")</td>

                                </tr>
                            <tr>

                                    <td>Monday</td>
                                    <td>@Html.TextBox("MonDesc")</td>

                                </tr>
                            <tr>

                                    <td>Tuesday</td>
                                    <td>@Html.TextBox("TueDesc")</td>

                                </tr>
                            <tr>

                                    <td>Wednesday</td>
                                    <td>@Html.TextBox("WedDesc")</td>

                                </tr>
                              <tr>

                                    <td>Thursday</td>
                                    <td>@Html.TextBox("ThuDesc")</td>

                                </tr>
                            <tr>

                                    <td>Friday</td>
                                    <td>@Html.TextBox("FriDesc")</td>

                                </tr>
                            
                           
                        </table>


                        <h2>@ViewBag.Message</h2>
                    </div>
                    <div class="modal-footer">
                         
                        <button type="submit" class="btn btn-primary" name="cmd"><i class="fa fa-check"></i>&nbsp; Submit</button>
                    </div>
                }
                <div>
                </div>
            </div>
        </div>
    </div>
</div>
