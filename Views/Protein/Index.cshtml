@model IEnumerable<GymManagement.Models.ViewModel.ProteinViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="module">
    <div class="module-head">
        <h3>Protein</h3>
    </div>
    <div class="module-body">

        <div class="col-md-9">
<a href="@Url.Action("Add", "Protein")"  class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>&nbsp;Create New</a>
    
<div class="module-body table">
    <table id="myTable" cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">

        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.ProteinName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.ProteinName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Protein", new { id=item.ProteinId})" class="editDialog btn btn-info">
                        <i class="fa
fa-pencil-square-o"></i>&nbsp;Edit
                    </a>
                     <a href="@Url.Action("Delete", "Protein", new { id=item.ProteinId})" class="fa fa-trash-o btn btn-danger">
                        <i class="fa
fa-pencil-square-o"></i>&nbsp;Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
    </div>
            </div>
        </div>

