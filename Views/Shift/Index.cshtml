@model IEnumerable<GymManagement.Models.ViewModel.ShiftViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="module">
    <div class="module-head">
        <h3>Shift</h3>
    </div>
    <div class="module-body">

        <div class="col-md-9">
<div class="module-body table">
    
    <a href="@Url.Action("Add", "Shift")"  class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i>&nbsp;Create New</a>
    
    <table id="myTable" cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ShiftName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ShiftName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToTime)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Shift", new { id=item.ShiftId})" class="editDialog btn btn-info">
                        <i class="fa
fa-pencil-square-o"></i>&nbsp;Edit
                    </a>
                    <a href="@Url.Action("Delete", "Shift", new { id=item.ShiftId})" class="fa fa-trash-o btn btn-danger">
                        <i class="fa
fa-pencil-square-o"></i>&nbsp;Delete
                    </a>

                </td>
            </tr>
        }
    </table>
      
</div>
            </div>
        </div>
    </div>




